{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pixel-block",
  "version": "0.1.0",
  "identifier": "com.pixel-block.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pixel-block",
        "width": 720,
        "height": 720,
        "resizable": false,
        "fullscreen": true,
        "decorations": false,
        "cursor_visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
